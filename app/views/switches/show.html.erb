<div class="container">
<h1 class="title"><%= @switch.name%></h1>
<h2 class="subtitle">historia</h2>


<table>
<tr>
  <th><%= "Czas zapisu" %></th>
  <th><%= "Znacznik czasowy serwera Arduino" %></th>
  <th><%= "Użytkownik" %></th>
  <th><%= "Wartość" %></th>

</tr>

          <% @switch_history.each do |h| %>
          <tr>
            <td><%= h.created_at %></td>
            <td><%= h.timeStamp %></td>
            <td><%= link_to h.user.email, user_path(h.user.id) %></td>
            <td><%= h.value %></td>
          </tr>
          <% end %>
      </table>
<%= will_paginate @switch_history, :params_name => 'page', :previous_label => t("<<"), :next_label => t(">>")  %>


</div>




<br/>



<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
