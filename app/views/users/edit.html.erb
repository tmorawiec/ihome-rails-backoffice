<%= form_for(@user) do |f| %>

<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Modyfikacja użytkownika
      </h1>
      <h2 class="subtitle">
        <%= @user.email %>
      </h2>
    </div>
  </div>
</section>

<div class="container">

<br/>


    
  
  <div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label"><%= f.label :email %><br /></label>
  </div>
  <div class="field-body">
    <div class="field">
      <p class="control is-expanded has-icons-left has-icons-right">
        <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "input" )%>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </p>
    </div>
  </div>
</div>



<div class="field is-horizontal">
<div class="field-label is-normal">
  <label class="label"><%= f.label :admin %><br /></label>
</div>
<div class="field-body">
<div class="field">
<%= f.check_box :admin %>
</div>
</div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
  <label class="label"><%= f.label "Polityka dostępu" %></label>
  </div>
  <div class="field-body">
    <span class="select">
    <%= f.collection_select(:permission_policy_id, PermissionPolicy.all, :id, :name, {:class=>'control'})   -%>
    </span>
  </div>
</div>


<div class="field is-horizontal">
  <div class="field-label is-normal">
    <span></span>
  </div>
  <div class="field-body">
    <div class="actions">
      <%= f.submit "Zapisz", :class => "button"  %>
      <%= link_to "Usuń użytkownika", admin_destroy_user_path(@user), method: :delete, data: { confirm: "Czy na pewno chcesz usunąć użytkownika?" } , :class => "button is-danger" %>
    </div>
  </div>
</div>

  



<% end %>
 



</div>


<div class="dropdown is-active">
  <div class="dropdown-trigger">
    <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
      <span>Dropdown button</span>
      <span class="icon is-small">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
    </button>
  </div>
  <div class="dropdown-menu" id="dropdown-menu" role="menu">
    <div class="dropdown-content">
      <a href="#" class="dropdown-item">
        Dropdown item
      </a>
      <a class="dropdown-item">
        Other dropdown item
      </a>
      <a href="#" class="dropdown-item is-active">
        Active dropdown item
      </a>
      <a href="#" class="dropdown-item">
        Other dropdown item
      </a>
      <hr class="dropdown-divider">
      <a href="#" class="dropdown-item">
        With a divider
      </a>
    </div>
  </div>
</div>
