<div class="container">
  
    <%= form_for(@user) do |f| %>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :admin %><br />
    <%= f.check_box :admin %>
  </div>

  <div class="field">
    <%= f.label :permission_policy_id %><br />
    <%= f.text_field :permission_policy_id %>
  </div>

  <%= f.collection_select(:permission_policy_id, PermissionPolicy.all, :id, :name)   -%>


  <div class="actions">
    <%= f.submit "Update!" %>
  </div>
<% end %>
 

